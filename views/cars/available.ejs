<%- include('../layout') %>

<h1>Available Cars</h1>
<% if (cars.length === 0) { %>
  <p>No cars available for rent.</p>
<% } else { %>
  <ul class="list-group">
    <% cars.forEach(car => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h2><%= car.make %> <%= car.model %> (<%= car.year %>)</h2>
          <p>Price per day: $<%= car.pricePerDay %></p>
          <p><%= car.description %></p>
          <% if (car.image) { %>
            <img src="<%= car.image %>" alt="Car Image" class="img-thumbnail" style="max-width: 100px;">
          <% } %>
        </div>
        <form action="/cars/rent/<%= car._id %>" method="POST">
          <button type="submit" class="btn btn-primary btn-sm">Rent</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>

